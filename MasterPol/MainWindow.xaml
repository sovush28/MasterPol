<Window x:Class="MasterPol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterPol"
        mc:Ignorable="d"
        Title="Игнатьева МастерПол" Height="600" Width="800"
        Icon="img/Мастер пол.ico" FontFamily="Segoe UI">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Background="#F4E8D3"/>
        <Image Source="img/Мастер пол.png" Grid.Row="0" HorizontalAlignment="Left"/>
        <TextBlock Text="Мастер Пол" Grid.Row="0" FontSize="30"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Frame Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"
               ContentRendered="MainFrame_ContentRendered"/>
        <Button Name="BackBtn" Content="Назад" Grid.Row="0"
            HorizontalAlignment="Right" VerticalAlignment="Center"
                Click="BackBtn_Click"/>
    </Grid>
</Window>
