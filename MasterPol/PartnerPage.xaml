<Page x:Class="MasterPol.PartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPol"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnerPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView Name="PartnerListView" Grid.Row="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <WrapPanel Grid.Column="0" Grid.Row="0">
                            <TextBlock Text="{Binding PartnerTypeName}" FontSize="20" />
                            <TextBlock Text=" | " FontSize="20"/>
                            <TextBlock Text="{Binding PartnerName}" FontSize="20" TextWrapping="Wrap"/>
                            
                        </WrapPanel>

                        <TextBlock Text="{Binding DirectorName}" FontSize="16"
                                   Grid.Row="1" Grid.Column="0"/>
                        <TextBlock Text="{Binding PhoneNumber, StringFormat=+7 {0}}" FontSize="16"
                                   Grid.Row="2" Grid.Column="0"/>
                        <TextBlock Text="{Binding Rating, StringFormat=Рейтинг: {0}}"
                                   FontSize="16" Grid.Row="3" Grid.Column="0"/>

                        <WrapPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Discount}" FontSize="20"/>
                            <TextBlock Text="%" FontSize="20"/>
                        </WrapPanel>

                        <Button Name="EditBtn" Content="Редактировать"
                                    Grid.Row="1" Grid.Column="1" Grid.RowSpan="3"
                                    Click="EditBtn_Click" VerticalAlignment="Bottom"/>


                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Name="AddBtn" Content="Добавить" Grid.Row="1"
                HorizontalAlignment="Right" Click="AddBtn_Click"/>



    </Grid>
</Page>
